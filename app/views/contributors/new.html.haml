%h1 Sign Up
= form_for @contributor do |f|
  - if @contributor.errors.any?
    .error_messages
      %h2 Form is invalid
      %ul
        - for message in @contributor.errors.full_messages
          %li= message
  %p
    = f.label :username
    %br/
    = f.text_field :username
  %p
    = f.label :password
    %br/
    = f.password_field :password
  %p
    = f.label :password_confirmation
    %br/
    = f.password_field :password_confirmation
  %p.button= f.submit