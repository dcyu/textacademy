%header
  %h1
    %a#home{:href => "#{root_path}"}
      %span.white> TEXT
      %span.green> ACADEMY

  %p.right.white
    - if @current_contributor.present?
      %a.nav-link{:href => "#{lessons_path}"}
        LESSONS
      |
      %a.nav-link{:href => "#{sign_out_path}"}
        SIGN OUT
    - else
      %a.sign-up-link.nav-link{:href => "#"}
        SIGN UP
      |
      %a.sign-in-link.nav-link{:href => "#"}
        SIGN IN

.wrapper
  .container.lessons
    .content
      %h1 Current Lessons
      %p Click on a lesson below to see current exercises and add your own!
      -@lessons.each do |lesson|
        %h2=link_to lesson.name, lesson
        %b.exercise-amount="#{lesson.exercises.count} exercises"
